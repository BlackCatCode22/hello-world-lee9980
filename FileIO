import java.io.*;


public class FileIO {
    public static void main(String[] args) {

        System.out.printf("Hello and welcome!");


        try {
            BufferedWriter writer = new BufferedWriter(new FileWriter("C:\\Users\\BE218\\IdeaProjects\\FileIo\\myoutput.txt"));
            writer.write("\n this is a line of text");


            writer.close();
        } catch (IOException e) {
            throw new RuntimeException(e);
        }




    }
}
